@model Course
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            color: #333;
        }

        p {
            margin: 10px 0;
        }

        strong {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">

        <h1>Course Details</h1>

        <div>
            <h2>Course ID: @Model.id</h2>
            <p><strong>Name:</strong> @Model.name</p>
            <p><strong>Degree:</strong> @Model.degree</p>
            <p><strong>Minimum Degree:</strong> @Model.Mindegree</p>
            <!-- Add more details if needed -->
        </div>

    </div>

</body>
</html>
